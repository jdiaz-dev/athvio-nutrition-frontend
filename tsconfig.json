{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "lib": [
      "dom",
      "es6",
      "es7",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "importHelpers": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "types/*": ["./types/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "types/**/*.ts"
  ],
}
